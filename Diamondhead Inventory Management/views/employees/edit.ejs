<div class="row3 inspace-30 clear" id ="comments">
  <form class="content"  action="<%=`/employees/${employee._id}/update?_method=PUT`%>" method="POST">
    <h2 class="content">Edit Employee</h2>
    <label for="inputTitle">First Name</label>
    <input type="text" name="fname" id="inputFName" value="<%= employee.name.first %>" placeholder="First Name" autofocus required>
    <label for="inputTitle">Last Name</label>
    <input type="text" name="lname" id="inputLName" value="<%= employee.name.last %>" placeholder="Last Name" required>
    <label for="inputDob">Date of birth</label>
    <input type="text" name="dob" id="inputDob" value="<%= formatedPostedDate(employee.dob,'mm/dd/yyyy') %>" placeholder="MM/DD/YYYY">
    <label for="inputPNumber">Phone Number</label>
    <input type="text" name="pnumber" id="inputPNumber" value="<%= employee.phoneNumber %>" placeholder="XXX-XXX-XXXX">
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" disabled="disabled" value="<%= employee.email %>" placeholder="Email">
    <label for="inputUserType">User Type</label>
    <input type="text" name="userType" id="inputUserType" value="<%= employee.userType %>" placeholder="Type">
    <label for="inputHireDate">HireDate</label>
    <input type="text" name="hireDate" id="inputHireDate" value="<%= formatedPostedDate(employee.hireDate,'mm/dd/yyyy') %>" placeholder="MM/DD/YYYY">
    <br /><button class="btn" type="submit">Save</button>
  </form>
</div>
