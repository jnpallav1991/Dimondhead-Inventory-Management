<h2 class="content">Product Details</h2>
<table class="scrollable">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Purchase Date</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
    <tr>
      <td>
        <%=  product.productName %>
      </td>
      <td>
        <%= product.productDescription %>
      </td>
      <td>
        <%= product.productQuantity %>
      </td>
      <td>
        <%= product.productPrice %>
      </td>
      <td>
        <%= formatedPostedDate(product.updatedAt,"mmm d, yyyy h:MM:ss TT") %>
      </td>
      <td>
        <a href="<%=`product/${product._id}/edit`%>"><i class="far fa-edit"></i></a>
      </td>
      <td>
       <a href="<%= `product/${product._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this product?')" ><i class="far fa-trash-alt"></i></a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
