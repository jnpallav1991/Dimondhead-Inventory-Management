<div class="row3 inspace-30 clear" id ="comments">
  <form class="content"  action="<%=`/purchase/${purchase._id}/update?_method=PUT`%>" method="POST">
    <h2 class="content">Edit purchase</h2>
    <label for="inputTitle">Product Name</label>
    <input type="text" name="pName" id="inputName" value="<%= purchase.productName %>" placeholder="Product Name" autofocus required>
    <label for="inputQuantity">Quantity</label>
    <input type="text" name="pQuantity" id="inputquantity" value="<%= purchase.quantity %>" placeholder="Quanity">
    <label for="inputPrice">Price(Per Peice)</label>
	<input type="text" name="pPrice" id="inputPrice" value="<%= purchase.productPerPrice %>" placeholder="Price">
	<label for="inputDob">Purchase Date</label>
    <input type="text" name="perchaseDate" id="inputPurchaseDate" value="<%= purchase.purchaseDate %>" placeholder="MM/DD/YYYY">
    <br /><button class="btn" type="submit">Update</button>
  </form>
</div>
