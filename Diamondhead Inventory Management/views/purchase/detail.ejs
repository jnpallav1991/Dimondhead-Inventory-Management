<h2 class="content">Purchase Details</h2>
<table class="scrollable">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Price(Per Peice)</th>
      <th>Purchase Date</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% purchases.forEach(purchase => { %>
    <tr>
      <td>
        <%=  purchase.productName %>
      </td>
      <td>
        <%= purchase.quantity %>
      </td>
      <td>
        <%= `$${purchase.productPerPrice}` %>
      </td>
      <td>
        <%= formatedPostedDate(purchase.purchaseDate,"mmm d, yyyy") %>
      </td>
      <td>
        <a href="<%=`purchase/${purchase._id}/edit`%>"><i class="far fa-edit"></i></a>
      </td>
      <td>
       <a href="<%= `purchase/${purchase._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this purchase?')" ><i class="far fa-trash-alt"></i></a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
